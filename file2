apiVersion: projectcalico.org/v3
kind: NetworkPolicy
metadata:
  name: allow-ping-to-external
  namespace: default  # Change this to the namespace where your pod is
spec:
  selector: all()  # Apply to all pods, adjust as needed
  types:
    - Egress
  egress:
    - action: Allow
      protocol: ICMP
      destination:
        nets:
          - 192.168.108.103/32  # The IP you want to ping
