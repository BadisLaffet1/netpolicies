apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-ping-to-external
  namespace: default  # Change this if your pod is in a different namespace
spec:
  podSelector: {}  # Applies to all pods in the namespace, adjust if needed
  policyTypes:
    - Egress
  egress:
    - to:
        - ipBlock:
            cidr: 192.168.108.103/32  # The IP address you want to allow ping to
      ports:
        - protocol: ICMP  # Allows ICMP traffic (ping)
